<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todos</title>
</head>

<body>
  <div class="container">
    <table class="styled-table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>dueDate</th>
          <th>Completed</th>
        </tr>
      </thead>
      <tbody>
        <% for(var i=0; i<allTodos.length; i++){%>
          <tr>
            <td>
              <%= allTodos[i].id %>
            </td>
            <td>
              <%= allTodos[i].title %>
            </td>
            <td>
              <%= allTodos[i].dueDate %>
            </td>
            <td>
              <%= allTodos[i].completed %>
            </td>
          </tr>
          <% } %>
      </tbody>
    </table>
  </div>
</body>

</html>
